<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
 	<class name = "ua.lviv.trainapplogos.hbm.xml.Cart" table = "cart">
	    <id name = "id" type = "int" column = "id">
	       <generator class="increment"/>
	        <!-- <generator class="native"/> -->
	        <!-- <generator class="assigned"/> -->
	    </id>
	      
	    <property name = "total" column = "total" type = "int"/>
	    <property name = "name" column = "name" type = "string"/>

		<set name="items" table="cart_item" inverse="false" lazy="true" fetch ="select" cascade="all">
			<key>
				<column name="cart_id" not-null="true"></column>
			</key>
			<many-to-many entity-name="ua.lviv.trainapplogos.hbm.xml.Item">
				<column name="item_id" not-null="true"></column>
			</many-to-many>
	 	</set>
   </class>
</hibernate-mapping>